<style>
  .events-hero {
    min-height: 60vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.6)),
      url('https://images.pexels.com/photos/1024967/pexels-photo-1024967.jpeg?auto=compress&cs=tinysrgb&w=1600') center/cover;
    filter: blur(1px);
    z-index: -1;
  }

  .hero-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 120px 0 60px;
  }

  .hero-content h1 {
    font-size: clamp(3rem, 8vw, 5rem);
    color: #2c2c2c;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .hero-content p {
    font-size: clamp(1.1rem, 3vw, 1.4rem);
    color: #666;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 30px;
  }

  .event-card {
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .event-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(31, 38, 135, 0.3);
  }

  .event-card.featured {
    grid-column: span 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }

  .event-badge {
    position: absolute;
    top: 20px;
    left: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    z-index: 10;
  }

  .event-image {
    height: 300px;
    overflow: hidden;
  }

  .featured .event-image {
    height: 100%;
  }

  .event-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .event-card:hover .event-image img {
    transform: scale(1.05);
  }

  .event-content {
    padding: 30px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .featured .event-content {
    justify-content: center;
  }

  .event-content h3 {
    font-size: 1.5rem;
    color: #2c2c2c;
    margin: 0;
  }

  .featured .event-content h3 {
    font-size: 2rem;
  }

  .event-date {
    color: #667eea;
    font-weight: 500;
    margin: 0;
  }

  .event-description {
    color: #666;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }

  .event-highlights {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin: 10px 0;
  }

  .highlight {
    background: rgba(102, 126, 234, 0.1);
    color: #667eea;
    padding: 6px 12px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .event-status {
    align-self: flex-start;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .coming-soon {
    background: rgba(255, 193, 7, 0.2);
    color: #e68900;
  }

  .planning {
    background: rgba(108, 117, 125, 0.2);
    color: #6c757d;
  }

  .section-title {
    text-align: center;
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: #2c2c2c;
    margin-bottom: 60px;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .feature-card {
    text-align: center;
    padding: 40px 30px;
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .feature-card h3 {
    font-size: 1.3rem;
    color: #2c2c2c;
    margin-bottom: 15px;
  }

  .feature-card p {
    color: #666;
    line-height: 1.6;
  }

  .events-cta {
    background: rgba(255, 255, 255, 0.1);
  }

  .cta-content {
    text-align: center;
    padding: 60px 40px;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    color: #2c2c2c;
    margin-bottom: 20px;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 1024px) {
    .event-card.featured {
      grid-column: span 1;
      display: block;
    }
    
    .featured .event-image {
      height: 300px;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 100px 0 40px;
    }

    .events-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .event-content {
      padding: 20px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .feature-card {
      padding: 30px 20px;
    }

    .cta-content {
      padding: 40px 20px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
</Layout>